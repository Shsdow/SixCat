<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_light</item>
        <item name="colorPrimaryDark">@color/Blue_Grey</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Launch">
        <item name="android:windowBackground">@drawable/welcome</item>
    </style>

    <style name="sixcatTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="windowActionBar">false</item>-->
        <!--<item name="windowNoTitle">true</item>-->
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AnimationActivity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_no</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_no</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>

    </style>


    <style name="SixCatTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="titleTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="SixCatTheme1" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TabLayout" parent="Base.Widget.Design.TabLayout">
        <!--<item name="tabMaxWidth">@dimen/design_tab_max_width</item>-->
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">@dimen/dp_2</item>
        <item name="tabPaddingStart">@dimen/dp_12</item>
        <item name="tabPaddingEnd">@dimen/dp_12</item>
        <!--<item name="tabBackground">@color/blue_light</item>-->
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/TextAppearance.Design.Tab</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    </style>

    <style name="WindowAnimationFadeInOut">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="SmallRatingStar" parent="@android:style/Widget.Holo.Light.RatingBar.Small">
        <item name="android:indeterminateDrawable">@drawable/frodo_ratingbar_xsmall</item>
        <item name="android:progressDrawable">@drawable/frodo_ratingbar_xsmall</item>
        <item name="android:maxHeight">@dimen/dp_20</item>
        <item name="android:minHeight">@dimen/dp_20</item>
    </style>

    <style name="SmallRatingStarller" parent="@android:style/Widget.Holo.Light.RatingBar.Small">
        <item name="android:indeterminateDrawable">@drawable/frodo_ratingbar_xsmall</item>
        <item name="android:progressDrawable">@drawable/frodo_ratingbar_xsmall</item>
        <item name="android:maxHeight">@dimen/dp_20</item>
        <item name="android:minHeight">@dimen/dp_20</item>
    </style>

    <style name="ProcessDialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
    </style>

</resources>
