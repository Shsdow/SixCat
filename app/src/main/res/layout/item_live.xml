<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginEnd="@dimen/dp_5"
    android:layout_marginStart="@dimen/dp_5"
    android:background="@drawable/bg_click"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dp_5"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="@dimen/dp_20">

        <ImageView
            android:id="@+id/iv_post_card"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:layout_alignParentStart="true"
            android:background="@drawable/iv_default"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toEndOf="@id/iv_post_card"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_normal"
            android:textStyle="bold"
            tools:text="我是一张图" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_title"
            android:layout_toEndOf="@id/iv_post_card"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/rb_star"
                style="@style/SmallRatingStar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:minHeight="@dimen/dp_20"
                android:numStars="5"
                android:rating="3.3" />

            <TextView
                android:id="@+id/tv_star_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                tools:text="3.6" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_director"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayout"
            android:layout_toEndOf="@id/iv_post_card"
            android:textSize="@dimen/textSize_smallest"
            tools:text="我是导演" />

        <TextView
            android:id="@+id/tv_actor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_director"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toEndOf="@id/iv_post_card"
            android:textSize="@dimen/textSize_smallest"
            tools:text="我是演员" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_want_to_watch_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/textSize_smallest"
                tools:text="3.3万人想看" />

            <TextView
                android:id="@+id/tv_port_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:background="@drawable/bg_weather_watch"
                android:paddingBottom="@dimen/dp_5"
                android:paddingEnd="@dimen/dp_20"
                android:paddingStart="@dimen/dp_20"
                android:paddingTop="@dimen/dp_5"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/textSize_small"
                android:textStyle="bold"
                tools:text="想看" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>