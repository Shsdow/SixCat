<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginEnd="@dimen/dp_5"
    android:layout_marginStart="@dimen/dp_5"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/dp_5"
    app:cardUseCompatPadding="true">
    <!--android:background="@drawable/bg_click"-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="@dimen/dp_10">

        <ImageView
            android:id="@+id/iv_post_card"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_120"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/ll_show_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_want_to_watch_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/textSize_smallest"
                tools:text="3.3万人想看" />

            <TextView
                android:id="@+id/tv_port_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:background="@drawable/bg_weather_watch"
                android:paddingBottom="@dimen/dp_5"
                android:paddingEnd="@dimen/dp_20"
                android:paddingStart="@dimen/dp_20"
                android:paddingTop="@dimen/dp_5"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/textSize_small"
                android:textStyle="bold"
                tools:text="想看" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_post_card"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_normal"
                android:textStyle="bold"
                tools:text="我是一张图" />

            <LinearLayout
                android:id="@+id/ll_star_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="visible">

                <RatingBar
                    android:id="@+id/rb_star"
                    style="@style/SmallRatingStar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:minHeight="@dimen/dp_20"
                    android:numStars="5"
                    tools:rating="3.3" />

                <TextView
                    android:id="@+id/tv_star_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_70"
                    android:layout_marginStart="@dimen/dp_8"
                    tools:text="3.6" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_not_on_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/have_not_show"
                android:textSize="@dimen/textSize_small"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_director"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_small"
                tools:text="我是导演" />

            <TextView
                android:id="@+id/tv_actor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="@dimen/textSize_small"
                tools:text="我是演员dgdge爱更爱等安东该噶等阿尔特特特特他却而EQ全球二二全群无软二 二二日券 " />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>